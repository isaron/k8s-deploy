FROM jenkins/jnlp-slave:alpine

USER root

COPY ./bin/helm /usr/local/bin/helm
COPY ./bin/helmrepo.tar.gz /home/jenkins
RUN chmod +x /usr/local/bin/helm \
    && tar -zxf /home/jenkins/helmrepo.tar.gz \
    && mv .helm /home/jenkins/. \
    && rm /home/jenkins/helmrepo.tar.gz /home/jenkins/.helm/plugins/helm-push /home/jenkins/.helm/cache/archive/* \
    && sed -i 's|\/root/|\/home\/jenkins\/|g' .helm/repository/repositories.yaml \
    && mkdir /home/jenkins/.kube
COPY ./kube/kubeconf /home/jenkins/.kube/config

# COPY ca-cert-XXX.pem /etc/ssl/certs/
# RUN cat ca-cert-XXX.pem >> /etc/ssl/certs/ca-certificates.crt
COPY ./certs/ca.cert.pem /etc/ssl/certs/ca.crt
RUN echo 'https://mirrors.aliyun.com/alpine/v3.9/main' > /etc/apk/repositories \
    && echo 'https://mirrors.aliyun.com/alpine/v3.9/community' >> /etc/apk/repositories \
    && apk --update upgrade \
    && apk add --no-cache ca-certificates \
    && update-ca-certificates \
    && keytool -import -alias ssii.com -file /etc/ssl/certs/ca.crt -keystore "$JAVA_HOME/jre/lib/security/cacerts" -storepass changeit -trustcacerts -noprompt \
    && echo "Asia/Chongqing" > /etc/timezone \
    && rm -rf /var/lib/apt/lists/* \
    && rm /var/cache/apk/* \
    && chown -R jenkins.jenkins /home/jenkins \
    && helm init --client-only \
    && helm repo update \
    && helm plugin install https://github.com/chartmuseum/helm-push

USER jenkins
